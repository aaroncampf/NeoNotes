<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeoNotes"
        xmlns:NeoNotes="clr-namespace:NeoNotes" x:Name="window" x:Class="MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="444.985" Width="764.581">
	<Grid x:Name="grid">
		<ComboBox x:Name="cbxCompanies" HorizontalAlignment="Left" Margin="86,15,0,0" VerticalAlignment="Top" Width="166" DisplayMemberPath="Name"/>
		<TextBox x:Name="txtCompanyName" HorizontalAlignment="Left" Height="23" Margin="86,55,0,0" TextWrapping="Wrap" Text="{Binding DataContext.Name, ElementName=window}" VerticalAlignment="Top" Width="166" >
		</TextBox>
		<Label x:Name="label" Content="Name" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="txtCompanyAddress" HorizontalAlignment="Left" Height="23" Margin="86,83,0,0" TextWrapping="Wrap" Text="{Binding DataContext.Address, ElementName=window}" VerticalAlignment="Top" Width="166"/>
		<Label x:Name="label_Copy" Content="Address" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="txtCompanyCity" HorizontalAlignment="Left" Height="23" Margin="86,114,0,0" TextWrapping="Wrap" Text="{Binding DataContext.City, ElementName=window}" VerticalAlignment="Top" Width="166"/>
		<Label x:Name="label_Copy1" Content="City" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="txtCompanyPhone" HorizontalAlignment="Left" Height="23" Margin="86,145,0,0" TextWrapping="Wrap" Text="{Binding DataContext.Phone, ElementName=window}" VerticalAlignment="Top" Width="166"/>
		<Label x:Name="label_Copy2" Content="Phone" HorizontalAlignment="Left" Margin="10,141,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="txtCompanyMisc" HorizontalAlignment="Left" Height="117" Margin="86,176,0,0" TextWrapping="Wrap" Text="{Binding DataContext.Misc, ElementName=txtCompanyMisc}" VerticalAlignment="Top" Width="166" AcceptsReturn="True"/>
		<Label x:Name="label_Copy3" Content="Misc" HorizontalAlignment="Left" Margin="10,172,0,0" VerticalAlignment="Top"/>
		<Label x:Name="label_Copy4" Content="Company" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top"/>
		<TabControl x:Name="tabControl" Margin="272,51,1,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
			<TabItem Header="TabItem">
				<Grid Background="#FFE5E5E5" Margin="0,2,0,-2">
					<Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="132,60,0,0" VerticalAlignment="Top" Width="75"/>
				</Grid>
			</TabItem>
			<TabItem Header="TabItem">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
